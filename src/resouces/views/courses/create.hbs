<div class='mt-4'>
    <h3>Create Course</h3>
    <form method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Name</label>
            <input type='text' class='form-control' name="name" id="name">
        </div>
        <div class='form-group'>
            <label for='decs'>Decscription</label>
            <input type='text' class='form-control' name="decs" id="decs">
        </div>
        <div class='form-group'>
            <label for='videoId'>VideoId</label>
            <input type='text' class='form-control' name="videoId" id="videoId">
        </div>
        
        <button type='submit' class='btn btn-primary'>Create</button>
    </form>
</div>