<div class='mt-4'>
    <h3>Create Course</h3>
    {{#with course}}
        <form method='POST' action='/courses/{{this._id}}?_method=PUT'>
            <div class='form-group'>
                <label for='name'>Name</label>
                <input type='text' class='form-control' name='name' id='name' value='{{this.name}}' />
            </div>
            <div class='form-group'>
                <label for='decs'>Decscription</label>
                <textarea class='form-control' name='decs' id='decs'>{{this.decs}}</textarea>
            </div>
            <div class='form-group'>
                <label for='videoId'>VideoId</label>
                <input type='text' class='form-control' name='videoId' id='videoId' value='{{this.videoId}}' />
            </div>

            <button type='submit' class='btn btn-primary'>Lưu lại</button>
        </form>
    {{/with}}
</div>